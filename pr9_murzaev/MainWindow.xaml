<Window x:Class="pr9_murzaev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr9_murzaev"
        mc:Ignorable="d"
        Title="Theatre Registration" Height="550" Width="1000" ResizeMode="CanMinimize" Background="#FF83837A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="3,3,3,0" Orientation="Horizontal">
            <TextBlock Style="{StaticResource ResourceKey=textStyle}" Margin="10,5,550,0" FontSize="18" ><Run Text="Регистрация в Theatre"/></TextBlock>
            <Button  Style="{StaticResource ResourceKey=Buttons}" Name="vhod" Margin="10,5,15,0" Click="vhod_Click" Grid.Row="1" Width="66">Вход</Button>
            <Button  Style="{StaticResource ResourceKey=Buttons}" Name="registr" Click="registr_Click" Margin="0,5,0,0" Grid.Row="1" Width="115">Регистрация</Button>
        </StackPanel>
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>

